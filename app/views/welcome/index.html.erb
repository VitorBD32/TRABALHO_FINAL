<h1>Bem vindo ao hotel vitor e alvaro</h1>

<h1>Quartos</h1>

<%= link_to "Faça Login", user_session_path, class: "btn btn-new me-2" %>

<div>
  <% @quartos.each do |quarto| %>
    <div class="quarto">
      <h3>Quarto Número: <%= quarto.numero %></h3>
      <p>Status: <%= quarto.status %></p>
      <p>Preço: R$ <%= quarto.preco %></p>

      <% if quarto.foto? %>
        <p>Foto do Quarto:</p>
        <%= image_tag quarto.foto.url, alt: "Foto do Quarto #{quarto.numero}", class: "img-thumbnail" %>
      <% else %>
        <p>Sem foto disponível para este quarto.</p>
      <% end %>
    </div>
  <% end %>
</div>

<%= user_signed_in? ? "Conectado: #{current_user.email}" : "Desconectado" %>
<%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
  Fazer Logoff
<% end %>