<div class="container mt-4">
  <h1 class="text-center mb-4">Edição da Reserva</h1>


  <div class="card shadow-sm">
    <div class="card-body">
      <%= render "form", reserva: @reserva %>
    </div>
  </div>


  <div class="mt-4 text-center">
    <%= link_to "Mostrar essa reserva", [:administrativo, @reserva], class: "btn btn-primary me-2" %>
    <%= link_to "Voltar para reservas", administrativo_reservas_path, class: "btn btn-secondary" %>
  </div>
</div>