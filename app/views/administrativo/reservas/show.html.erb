<div class="container mt-4">

  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>


  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= render @reserva %>
    </div>
  </div>


  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Editar reserva", edit_administrativo_reserva_path(@reserva), class: "btn btn-primary" %>
      <%= link_to "Voltar para reservas", administrativo_reservas_path, class: "btn btn-secondary" %>
    </div>
    <div>
      <%= button_to "Excluir reserva", [:administrativo, @reserva], method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza que deseja excluir esta reserva?" } %>
    </div>
  </div>
</div>