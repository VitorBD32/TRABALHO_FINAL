<div class="container mt-5">
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Detalhes do Quarto</h2>
    </div>
    <div class="card-body">
      <p>
        <strong>Número:</strong>
        <%= @quarto.numero %>
      </p>
      <p>
        <strong>Tipo:</strong>
        <%= @quarto.tipo %>
      </p>
      <p>
        <strong>Preço:</strong>
        <%= number_to_currency(@quarto.preco, unit: "R$", separator: ",", delimiter: ".") %>
      </p>
      <p>
        <strong>Status:</strong>
        <%= @quarto.status %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-start mt-4">
    <%= link_to "Editar Quarto", edit_administrativo_quarto_path(@quarto), class: "btn btn-warning me-2" %>
    <%= button_to "Excluir Quarto", [:administrativo, @quarto], method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-danger me-2" %>
  </div>

  <div class="d-flex justify-content-start mt-3">
    <%= link_to "Voltar para Quartos", administrativo_quartos_path, class: "btn btn-secondary" %>
  </div>
</div>