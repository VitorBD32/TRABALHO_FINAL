<%= form_with(model: [:administrativo, @quarto]) do |form| %>
  <% if @quarto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@quarto.errors.count, "error") %> prohibited this quarto from being saved:</h2>

      <ul>
        <% @quarto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :numero, style: "display: block" %>
    <%= form.text_field :numero %>
  </div>

  <div>
    <%= form.label :tipo, style: "display: block" %>
    <%= form.text_field :tipo %>
  </div>

  <div>
    <%= form.label :preco, style: "display: block" %>
    <%= form.text_field :preco %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <!-- Campo de Foto -->
  <div>
    <%= form.label :foto, style: "display: block" %>
    <%= form.file_field :foto %>
  </div>

  <div>
    <%= form.submit "Criar Quarto" %>
  </div>
<% end %>