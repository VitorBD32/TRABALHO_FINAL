<div id="<%= dom_id(quarto) %>" class="card mb-3 shadow-sm">
  <div class="card-body">
    <h5 class="card-title">Quarto <%= quarto.numero %></h5>

    <p class="card-text">
      <strong>Tipo:</strong> <%= quarto.tipo %>
    </p>

    <p class="card-text">
      <strong>Preço:</strong> R$ <%= number_to_currency(quarto.preco, unit: "", separator: ",", delimiter: ".") %>
    </p>

    <p class="card-text">
      <strong>Status:</strong> 
      <% if quarto.status == "Disponível" %>
        <span class="badge bg-success"><%= quarto.status %></span>
      <% else %>
        <span class="badge bg-danger"><%= quarto.status %></span>
      <% end %>
    </p>
  </div>
</div>